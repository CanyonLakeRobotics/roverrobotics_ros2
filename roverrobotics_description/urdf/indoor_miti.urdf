<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="rover_miti">
    <xacro:property name="wheel_z_offset" value="0.081" />
    <xacro:property name="wheel_x_offset" value="0.1415" />
    <xacro:property name="wheel_y_offset" value="0.18" />
    <xacro:property name="wheel_mass" value="4.53592" />
    <xacro:property name="chassis_mass" value="4.53592" />

    <link name="base_link" />


    <link name="chassis_link">
        <visual>
            <origin xyz="0 0 0.061" rpy="1.57 -0 3.1415" />
            <geometry>
                <mesh filename="package://roverrobotics_description/meshes/miti_chassis.dae"/>
            </geometry>
        </visual>

        <collision>
            <origin xyz="0 0 0.061" rpy="1.57 -0 3.1415" />
            <geometry>
                <mesh filename="package://roverrobotics_description/meshes/miti_chassis.dae"/>
            </geometry>
        </collision>

        <inertial>
            <origin xyz="0 0 0.16" rpy="1.57 0 3.1415"/>
            <mass value="${chassis_mass}" />
            <inertia ixx="0.028064" ixy="0"  ixz="0" iyy="0.08226" iyz="0" izz="0.10258" />
        </inertial>
    </link>

    <joint name="base_to_chassis" type="fixed">
        <parent link="base_link"/>
        <child link="chassis_link"/>
    </joint>

    <link name="fl_wheel_link">
        <visual>
            <origin xyz="${wheel_x_offset} ${wheel_y_offset} ${wheel_z_offset}" rpy="1.57 3.1415 0" />
            <geometry>
                <mesh filename="package://roverrobotics_description/meshes/hub_6.5in.dae"/>
            </geometry>
        </visual>

        <collision>
            <origin xyz="${wheel_x_offset} ${wheel_y_offset} ${wheel_z_offset}" rpy="1.57 3.1415 0" />
            <geometry>
                <mesh filename="package://roverrobotics_description/meshes/hub_6.5in.dae"/>
            </geometry>
        </collision>

        <inertial>
            <origin xyz="${wheel_x_offset} ${wheel_y_offset} ${wheel_z_offset}" rpy="1.57 3.1415 0" />
            <mass value="${wheel_mass}" />
            <inertia ixx="0.01937" ixy="0"  ixz="0" iyy="0.03629" iyz="0" izz="0.01937" />
        </inertial>
    </link>
    <joint name="fl_wheel_to_chassis" type="continuous">
        <parent link="chassis_link"/>
        <child link="fl_wheel_link"/>
        <axis xyz="0 1 0"/>
        <origin xyz="0 0 0"/>
    </joint>

    <link name="fr_wheel_link">
        <visual>
            <origin xyz="${wheel_x_offset} ${-wheel_y_offset} ${wheel_z_offset}" rpy="1.57 3.1415 3.1415" />
            <geometry>
                <mesh filename="package://roverrobotics_description/meshes/hub_6.5in.dae"/>
            </geometry>
        </visual>

        <collision>
            <origin xyz="${wheel_x_offset} ${-wheel_y_offset} ${wheel_z_offset}" rpy="1.57 3.1415 3.1415" />
            <geometry>
                <mesh filename="package://roverrobotics_description/meshes/hub_6.5in.dae"/>
            </geometry>
        </collision>

        <inertial>
            <origin xyz="${wheel_x_offset} ${-wheel_y_offset} ${wheel_z_offset}" rpy="1.57 3.1415 3.1415" />
            <mass value="${wheel_mass}" />
            <inertia ixx="0.01937" ixy="0"  ixz="0" iyy="0.03629" iyz="0" izz="0.01937" />
        </inertial>
    </link>
    <joint name="fr_wheel_to_chassis" type="continuous">
        <parent link="chassis_link"/>
        <child link="fr_wheel_link"/>
        <axis xyz="0 1 0"/>
        <origin xyz="0 0 0"/>
    </joint>

    <link name="rl_wheel_link">
        <visual>
            <origin xyz="${-wheel_x_offset} ${wheel_y_offset} ${wheel_z_offset}" rpy="1.57 3.1415 0" />
            <geometry>
                <mesh filename="package://roverrobotics_description/meshes/hub_6.5in.dae"/>
            </geometry>
        </visual>

        <collision>
            <origin xyz="${-wheel_x_offset} ${wheel_y_offset} ${wheel_z_offset}" rpy="1.57 3.1415 0" />
            <geometry>
                <mesh filename="package://roverrobotics_description/meshes/hub_6.5in.dae"/>
            </geometry>
        </collision>

        <inertial>
            <origin xyz="${-wheel_x_offset} ${wheel_y_offset} ${wheel_z_offset}" rpy="1.57 3.1415 0" />
            <mass value="${wheel_mass}" />
            <inertia ixx="0.01937" ixy="0"  ixz="0" iyy="0.03629" iyz="0" izz="0.01937" />
        </inertial>
    </link>
    <joint name="rl_wheel_to_chassis" type="continuous">
        <parent link="chassis_link"/>
        <child link="rl_wheel_link"/>
        <axis xyz="0 1 0"/>
        <origin xyz="0 0 0"/>
    </joint>

    <link name="rr_wheel_link">
        <visual>
            <origin xyz="${-wheel_x_offset} ${-wheel_y_offset} ${wheel_z_offset}" rpy="1.57 3.1415 3.1415" />
            <geometry>
                <mesh filename="package://roverrobotics_description/meshes/hub_6.5in.dae"/>
            </geometry>
        </visual>

        <collision>
            <origin xyz="${-wheel_x_offset} ${-wheel_y_offset} ${wheel_z_offset}" rpy="1.57 3.1415 3.1415" />
            <geometry>
                <mesh filename="package://roverrobotics_description/meshes/hub_6.5in.dae"/>
            </geometry>
        </collision>

        <inertial>
            <origin xyz="${-wheel_x_offset} ${-wheel_y_offset} ${wheel_z_offset}" rpy="1.57 3.1415 3.1415" />
            <mass value="${wheel_mass}" />
            <inertia ixx="0.01937" ixy="0"  ixz="0" iyy="0.03629" iyz="0" izz="0.01937" />
        </inertial>
    </link>
    <joint name="rr_wheel_to_chassis" type="continuous">
        <parent link="chassis_link"/>
        <child link="rr_wheel_link"/>
        <axis xyz="0 1 0"/>
        <origin xyz="0 0 0"/>
    </joint>


</robot>
