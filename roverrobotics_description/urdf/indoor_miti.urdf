<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="rover_miti">
    <xacro:property name="wheel_z_offset" value="0.081" />
    <xacro:property name="wheel_x_offset" value="0.1415" />
    <xacro:property name="wheel_y_offset" value="0.18" />
    <xacro:property name="wheel_mass" value="3.62874" />
    <xacro:property name="chassis_mass" value="4.53592" />

    <gazebo>
        <plugin name="skid_drive_controller" filename="libgazebo_ros_diff_drive.so"> 
            <num_wheel_pairs>2</num_wheel_pairs>
            <!-- Wheel Information -->
            <left_joint>rl_wheel_to_chassis</left_joint>
            <left_joint>fl_wheel_to_chassis</left_joint>
            <right_joint>rr_wheel_to_chassis</right_joint>
            <right_joint>fr_wheel_to_chassis</right_joint>
            <wheel_separation>0.4</wheel_separation>
            <wheel_separation>0.4</wheel_separation>
            <wheel_diameter>0.254</wheel_diameter>
            <wheel_diameter>0.254</wheel_diameter>


            <!-- Limits -->
            <max_wheel_torque>12</max_wheel_torque>
            <max_wheel_acceleration>10.0</max_wheel_acceleration>

            
            <!-- Output -->
            <odometry_frame>odom</odometry_frame>
            <robot_base_frame>base_link</robot_base_frame>

            <publish_odom>true</publish_odom>
            <publish_odom_tf>true</publish_odom_tf>
            <publish_wheel_tf>true</publish_wheel_tf>

        </plugin>
    </gazebo>


    <link name="base_link" />

    <link name="chassis_link">
        <visual>
            <origin xyz="0 0 0.061" rpy="1.57 -0 3.1415" />
            <geometry>
                <mesh filename="file://$(find roverrobotics_description)/meshes/miti_chassis.dae"/>
            </geometry>
        </visual>

        <collision>
            <origin xyz="0 0 0.061" rpy="1.57 -0 3.1415" />
            <geometry>
                <mesh filename="file://$(find roverrobotics_description)/meshes/miti_chassis.dae"/>
            </geometry>
        </collision>

        <inertial>
            <origin xyz="0 0 0.12" rpy="0 0 0"/>
            <mass value="${chassis_mass}" />
            <inertia ixx="0.028064" ixy="0"  ixz="0" iyy="0.08226" iyz="0" izz="0.10258" />
        </inertial>
    </link>

    <joint name="base_to_chassis" type="fixed">
        <parent link="base_link"/>
        <child link="chassis_link"/>
    </joint>

    <link name="fl_wheel_link">
        <visual>
            <origin xyz="0 0 0" rpy="1.57 3.1415 0" />
            <geometry>
                <mesh filename="file://$(find roverrobotics_description)/meshes/hub_6.5in.dae"/>
            </geometry>
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="1.57 3.1415 0" />
            <geometry>
                <mesh filename="file://$(find roverrobotics_description)/meshes/hub_6.5in.dae"/>
            </geometry>
        </collision>

        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <mass value="${wheel_mass}" />
            <inertia ixx="0.008093" ixy="0"  ixz="0" iyy="0.014226" iyz="0" izz="0.008093" />
        </inertial>
    </link>
    <joint name="fl_wheel_to_chassis" type="continuous">
        <parent link="chassis_link"/>
        <child link="fl_wheel_link"/>
        <axis xyz="0 1 0"/>
        <origin xyz="${wheel_x_offset} ${wheel_y_offset} ${wheel_z_offset}"/>
    </joint>

    <link name="fr_wheel_link">
        <visual>
            <origin xyz="0 0 0" rpy="1.57 3.1415 3.1415" />
            <geometry>
                <mesh filename="file://$(find roverrobotics_description)/meshes/hub_6.5in.dae"/>
            </geometry>
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="1.57 3.1415 3.1415" />
            <geometry>
                <mesh filename="file://$(find roverrobotics_description)/meshes/hub_6.5in.dae"/>
            </geometry>
        </collision>

        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <mass value="${wheel_mass}" />
            <inertia ixx="0.008093" ixy="0"  ixz="0" iyy="0.014226" iyz="0" izz="0.008093" />
        </inertial>
    </link>
    <joint name="fr_wheel_to_chassis" type="continuous">
        <parent link="chassis_link"/>
        <child link="fr_wheel_link"/>
        <axis xyz="0 1 0"/>
        <origin xyz="${wheel_x_offset} ${-wheel_y_offset} ${wheel_z_offset}"/>
    </joint>

    <link name="rl_wheel_link">
        <visual>
            <origin xyz="0 0 0" rpy="1.57 3.1415 0" />
            <geometry>
                <mesh filename="file://$(find roverrobotics_description)/meshes/hub_6.5in.dae"/>
            </geometry>
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="1.57 3.1415 0" />
            <geometry>
                <mesh filename="file://$(find roverrobotics_description)/meshes/hub_6.5in.dae"/>
            </geometry>
        </collision>

        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <mass value="${wheel_mass}" />
            <inertia ixx="0.008093" ixy="0"  ixz="0" iyy="0.014226" iyz="0" izz="0.008093" />
        </inertial>
    </link>
    <joint name="rl_wheel_to_chassis" type="continuous">
        <parent link="chassis_link"/>
        <child link="rl_wheel_link"/>
        <axis xyz="0 1 0"/>
        <origin xyz="${-wheel_x_offset} ${wheel_y_offset} ${wheel_z_offset}"/>
    </joint>

    <link name="rr_wheel_link">
        <visual>
            <origin xyz="0 0 0" rpy="1.57 3.1415 3.1415" />
            <geometry>
                <mesh filename="file://$(find roverrobotics_description)/meshes/hub_6.5in.dae"/>
            </geometry>
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="1.57 3.1415 3.1415" />
            <geometry>
                <mesh filename="file://$(find roverrobotics_description)/meshes/hub_6.5in.dae"/>
            </geometry>
        </collision>

        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <mass value="${wheel_mass}" />
            <inertia ixx="0.008093" ixy="0"  ixz="0" iyy="0.014226" iyz="0" izz="0.008093" />
        </inertial>
    </link>
    <joint name="rr_wheel_to_chassis" type="continuous">
        <parent link="chassis_link"/>
        <child link="rr_wheel_link"/>
        <axis xyz="0 1 0"/>
        <origin xyz="${-wheel_x_offset} ${-wheel_y_offset} ${wheel_z_offset}"/>
    </joint>


</robot>
